<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mario Bros"
            android:padding="5dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/txtPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Price :"
            android:textSize="18sp"
            />

            <TextView
                android:id="@+id/game_price"
                app:layout_constraintStart_toEndOf="@id/txtPrice"
                app:layout_constraintTop_toBottomOf="@id/game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="100.000"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/txtMode"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Mode :"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/game_mode"
                app:layout_constraintStart_toEndOf="@id/txtMode"
                app:layout_constraintTop_toBottomOf="@id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Single"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/txtGenre"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Genre :"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/game_genre"
                app:layout_constraintStart_toEndOf="@id/txtGenre"
                app:layout_constraintTop_toBottomOf="@id/txtMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Sinlge-scroll"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/txtRelease"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Release Year :"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/game_release_year"
                app:layout_constraintStart_toEndOf="@id/txtRelease"
                app:layout_constraintTop_toBottomOf="@id/txtGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="13, September 1985"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/txtDeveloper"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtRelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Developer :"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/game_developer"
                app:layout_constraintStart_toEndOf="@id/txtDeveloper"
                app:layout_constraintTop_toBottomOf="@id/txtRelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Sule"
                android:textSize="18sp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>